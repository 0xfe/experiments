APPNAME = "gohello"
VERSION = "1.0"

top = "."
out = "build"

def configure(ctx):
  ctx.env.GOC = "6g"
  ctx.env.GOL = "6l"

def build(ctx):
  go_compile = "${GOC} -o ${TGT} ${SRC}"
  go_link = "${GOL} -o ${TGT} ${SRC}"

  ctx(rule=go_compile, source="hello.go", target="hello.6")
  ctx(rule=go_link, source="hello.6", target="hello")
