            <!-- Do not use Project Properties customizer when editing this file manually. -->
            <name>Beer</name>
            <properties/>
            <folders>
                <source-folder>
                    <label>src</label>
                    <type>java</type>
                    <location>src</location>
                </source-folder>
                <source-folder>
                    <label>web</label>
                    <type>doc_root</type>
                    <location>web</location>
                </source-folder>
                <source-folder>
                    <label>etc</label>
                    <type>web_inf</type>
                    <location>etc</location>
                </source-folder>
            </folders>
            <ide-actions>
                <action name="build">
                    <target>compile</target>
